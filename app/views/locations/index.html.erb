<% else %>

<h1>Locations (<%= @location_items.count %>) </h1>
  <div class="row">
    <div class="span4 offset0">
      <%= render 'new' %>
    </div>
    <div class="span6 offset1">
      ALL LOCATIONS
      <ul class="users">
      	<%= render partial: @locations, collection: @location_items %>
      </ul> 
    </div>
  </div>
<% end %>

