<%= form_for([@comment.event, @comment]) do |f| %>

  <%= render 'shared/error_messages', object: f.object %>
  
  <% if signed_in? %>
	<%= current_user.first_name+" "+current_user.last_name  %>
	<%= f.hidden_field :user_id, :value => current_user.id %>
  <% else %>
  	plese sign in to comment
  <% end %>

  <%= f.text_area :comment_content, placeholder: "Type Your Comment Here..." %>
  <%= f.submit "Post", class: "btn btn-defult" %>

<% end %>