<%= form_for([@comment.event, @comment]) do |f| %>

  <%= render 'shared/error_messages', object: f.object %>

  <%= current_user.first_name %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.text_area :comment_content, placeholder: "Type Your Comment Here..." %>
  <%= f.submit "Post", class: "btn btn-defult" %>

<% end %>