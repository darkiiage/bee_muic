
    <%= form_for(@faculty) do |f| %>
      
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :faculty_name %>
      <%= f.text_field :faculty_name %>

      <%= f.label :faculty_short_name, "Symbol" %>
      <%= f.text_field :faculty_short_name, :maxlength=>"4"%>

      <%= f.label :faculty_type %>
      <%= f.select :faculty_type, options_for_select([["Faculties", "Faculties"], ["Institutes", "Institutes"], ["Colleges", "Colleges"], ["Centers", "Centers"]]) %>
      <%= f.submit "Add New Faculty", class: "btn btn-medium btn-warning" %>
    <% end %>


