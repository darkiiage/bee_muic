<%= form_for(@event_type) do |f| %>
      
  <%= render 'shared/error_messages', object: f.object %>
  
  <%= f.label :name, "Event Type Name" %>
  <%= f.text_field :name %>

  <%= f.label :color %>
  <%= f.color_field :color, class: "color-picker"%>
  
  <%= f.label :image %>
  <%= f.file_field :image%>

  <%= f.submit "Add New Event Types", class: "btn btn-medium btn-warning" %>

<% end %>