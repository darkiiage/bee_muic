<% provide(:title, @user.first_name) %>
<h1>
	<%= @user.first_name%> <%= @user.last_name %> 
  <% if @user.admin %>  ( Admin ) <% end %>
  <% if current_user.admin? && !current_user?(@user) %> 
        | <%= link_to "delete", @user, method: :delete,
                                  data: { confirm: "You sure?" } %>
<% end %>
</h1>

<div class="row">
  <div class="span3 offset0">
	<tab><%= image_tag @user.user_image_url.to_s, size:"220" %>
  </div>
  <div class="span4"> 
    <%= render 'shared/stats' %>
    <%= render 'follow_form' if signed_in? %><br>
	  <h3><%= @user.description%> </h3>
  </div>
</div>
<div = "row">
	<nav>
  	<ul class="nav nav-pills">
  	  <li><%= link_to "Up Coming Events", '#' %> </li>
  	  <li><%= link_to "Past Events", '#' %> </li>
  	</ul>
  </nav>
    <% if @user.events.any? %>
      <h3> <%= @user.events.count %> events</h3>
      <ol class="events">
        <%= render @events %>
      </ol>
      <%= will_paginate @events%>
    <% else %>
      There is no events yet!
    <% end %>
</div>

